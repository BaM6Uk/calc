<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#010101</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="numbtn">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="cornerRadius">36dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="backgroundTint">#1f1f20</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>